from datetime import date
ano_atual=date.today().year
total_maior=0
total_menor=0
for x in range(1,8):
    ano=int(input(f'Em que ano a {x}° pessoa nasceu: '))
    idade=ano_atual-ano 
    if(idade>18):
        total_maior+=1
    else:
        total_menor+=1
print(f'Ao todo tivemos {total_maior} maior de idade')
print(f'E também tivemos {total_menor} menor de idade')
